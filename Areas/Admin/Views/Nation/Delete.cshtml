@model K21CNT2_NguyenHaiDang_2110900067_DATN.Models.NationModel

<div class="create-comic">
    <h2 class="title">Xóa Quốc Gia</h2>
    <p class="fs-5">
        Bạn có chắc chắn muốn xóa quốc gia <strong class="text-danger">"@Model.NationName"</strong> không?
    </p>
    <form asp-action="Delete" method="post" class="comic-form">
        <input type="hidden" asp-for="NationId" />
        <div class="form-group">
            <label asp-for="NationName" for="comic-name">Tên Quốc Gia</label>
            <input asp-for="NationName" type="text" id="comic-name" placeholder="Nhập tên quốc gia..." readonly>
            <span asp-validation-for="NationName" class="text-danger"></span>
        </div>
        <div class="button-group">
            <button type="submit" class="btn-submit">Xóa Quốc Gia</button>
            <a asp-action="Index" class="btn-cancel">Quay Lại</a>
        </div>
    </form>
</div>